/* pages/detail/detail.wxss */

page {
  background: url('http://r.photo.store.qq.com/psb?/V11cXZik1xvWSk/eGmXLj5oGkdBCmdDsCxSeo*nIYSTQmozxnvPALYjp.8!/r/dPMAAAAAAAAA');
  height: 100%;
  font-family: "宋体";
  color: #555;
}

.song {
  width: 100%;
  
  height: 100%;
  /* border: 1px solid red; */
}

.song .bigImg {
  margin-left: 11px;
  width: 325px;
  height: 380px;
  margin-top: 20rpx;
  border: 6px solid #555;
  border-radius: 5px;
}

/* 歌名 */

.songname, .singername, .img {
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
    overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.songname {
  font-size: 40rpx;
}

.singername {
  font-size: 28rpx;
}

.song .img {
  font-size: 26rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.song .img .icon {
  width: 17px;
  height: 17px;
  position: absolute;
  top:15%;
}

audio {
  width: 100%;
  margin-top: 35px;
}

.wx-audio-default {
  width: 100%;
}
